<style>
	/* Основные стили для формы фильтров */
.filter-box {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 20px;
  align-items: flex-end;
}

.filter-item {
  display: flex;
  flex-direction: column;
}

.filter-item label {
  font-weight: bold;
  margin-bottom: 5px;
}

.filter-item select,
.filter-item input,
.filter-item button {
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.filter-item button {
  background-color: #007bff;
  color: white;
  border: none;
  cursor: pointer;
}

.filter-item button:hover {
  background-color: #0056b3;
}

/* Адаптивные стили */
@media (max-width: 768px) {
  .filter-box {
    flex-direction: column;
  }

  .filter-item {
    width: 100%;
  }

  .filter-item select,
  .filter-item input,
  .filter-item button {
    width: 100%;
  }
}

</style>

